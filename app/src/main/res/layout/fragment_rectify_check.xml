<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.buaa.bwc.buaa_check.view.CheckCheckRectifyFragment"
    android:orientation="vertical">

    <com.gigamole.navigationtabstrip.NavigationTabStrip
        android:id="@+id/rectify_check_nts"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        app:nts_active_color="#42a4d1"
        app:nts_color="#42a4d1"
        app:nts_corners_radius="1dp"
        app:nts_inactive_color="#ff1a1e23"
        app:nts_size="15sp"
        app:nts_weight="3dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/rectify_check_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>

</LinearLayout>
